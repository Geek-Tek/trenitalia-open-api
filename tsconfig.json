{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "declaration": true,
        "isolatedModules": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}